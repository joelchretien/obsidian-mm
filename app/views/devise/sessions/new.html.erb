<div class="container">
  <div class="row">
    <div class="col-lg-6 mt-5">
      <div class="row">
        <div class="col-md-6">
          <i class="fa fa-usd landing-page-logo"></i>
        </div>
        <div class="col-md-6 landing-page-tagline">
          <div class="mt-3">
            Let Obsidian keep you in the <div class="landing-page-black">black</div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6 mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="border rounded p-3">
          <h4>Login</h4>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", "data-eye": '' %>
          </div>
          <div class="form-group mb-0 pb-0">
            <label class="mb-0">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </label>
          </div>
          <div class="form-group m-0">
            <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
          </div>
          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
